<div class="app-dashboard-form" style="text-align: {{ block.settings.text_alignment }};">
  <div class="form-container" style="max-width: {{ block.settings.form_width }}px;">
    <h1 class="form-title">{{ block.settings.first_title }}</h1>
    <p class="form-subtitle">{{ block.settings.subtitle }}</p>
    
    <!-- Shop domain pass karo JavaScript ke liye -->
    <script>
      window.shopDomain = '{{ shop.permanent_domain }}';
    </script>
    
    <form id="registration-form" class="registration-form">
      <div class="form-group">
        <label for="full-name">Full Name</label>
        <input 
          type="text" 
          id="full-name" 
          name="fullName" 
          placeholder="Enter your full name" 
          required
        />
        <span class="error-message" id="name-error"></span>
      </div>

      <div class="form-group">
        <label for="email">Email Address</label>
        <input 
          type="email" 
          id="email" 
          name="email" 
          placeholder="Enter your email" 
          required
        />
        <span class="error-message" id="email-error"></span>
      </div>

      <div class="form-group">
        <label for="phone">Phone Number</label>
        <input 
          type="tel" 
          id="phone" 
          name="phone" 
          placeholder="Enter your phone number" 
          required
        />
        <span class="error-message" id="phone-error"></span>
      </div>

      <div class="form-group">
        <label for="password">Password</label>
        <input 
          type="password" 
          id="password" 
          name="password" 
          placeholder="Create a password" 
          required
        />
        <span class="error-message" id="password-error"></span>
      </div>

      <div class="form-group">
        <label for="confirm-password">Confirm Password</label>
        <input 
          type="password" 
          id="confirm-password" 
          name="confirmPassword" 
          placeholder="Confirm your password" 
          required
        />
        <span class="error-message" id="confirm-password-error"></span>
      </div>

      <div class="form-group checkbox-group">
        <label class="checkbox-label">
          <input type="checkbox" id="terms" name="terms" required />
          <span>I agree to the Terms and Conditions</span>
        </label>
        <span class="error-message" id="terms-error"></span>
      </div>

      <button type="submit" class="submit-btn" style="background: {{ block.settings.button_color }}; color: {{ block.settings.button_text_color }};">
        {{ block.settings.button_text }}
      </button>
      
      <div class="form-message" id="form-message"></div>
    </form>
  </div>
</div>

{% schema %}
{
  "name": "App Registration Form",
  "target": "section",
  "class": "app-dashboard-form",
  "stylesheet": "app-form.css",
  "javascript": "app-form.js",
  "settings": [
    {
      "type": "text",
      "id": "first_title",
      "label": "App Form Title",
      "default": "App Registration Form"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Form Subtitle",
      "default": "Create your account to get started"
    },
    {
      "type": "text_alignment",
      "id": "text_alignment",
      "label": "Text alignment",
      "default": "center"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Register Now"
    },
    {
      "type": "color",
      "id": "button_color",
      "label": "Button Color",
      "default": "#667eea"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button Text Color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "form_width",
      "label": "Form Width",
      "min": 300,
      "max": 800,
      "step": 50,
      "default": 500,
      "unit": "px"
    }
  ]
}
{% endschema %}

